<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
</head>
<body>
    <h1>Login</h1>
    <ul>
        <% if (typeof errors !='undefined') { %> <% errors.foreach(error => { %>
        <li><%= error.message %></li>
    <% }) %> <% } %>
    </ul>
    <ul>
        <% if(messages.success_msg){ %>
        <li><%= messages.success_msg %></li>
        <% } %>
    </ul>
    <ul>
        <% if(messages.error){ %>
        <li><%= messages.error %></li>
        <% } %>
    </ul>
    <form action="/users/login" method="POST">
        <div><input type="text" id="username" name="username" placeholder="Username" required></div>
        <div><input type="text" id="password" name="password" placeholder="Password" required></div>
        <div><input type="email" id="email" name="email" placeholder="Email" required></div>
        <div><input type="text" id="bio" name="bio" placeholder="Bio" required></div>
        <div><input type="text" id="picture" name="picture" placeholder="Picture" required></div>
        <div><input type="submit" value="Login"></div>
        <a href="/users/register">Click to register</a>
    </form>
</body>
</html>